<div class="buy-form">

    <div class="buy-form__top-bar">
        <div class="buy-form-close">
            <i class="fa fa-times"></i>
        </div>

        <h3>Список покупок:</h3>
    </div>

    <div class="buy-form__table">
        <div class="buy-form__col buy-form__col-75per">
            <div class="buy-form__items-list"></div>

            <div class="buy-form__total-cost">
                Общая стоимость:
                <span>0</span> руб
            </div>
        </div>

        <div class="buy-form__col">
            <div class="buy-form__wrapper">
                <div class="buy-form__wrapper-elem">
                    <label>Введите ваш номер телефона</label>
                    <input type="tel" placeholder="номер" id="clientTel"/>
                </div>

                <div class="buy-form__wrapper-elem">
                    <label>Введите ваш почтовый адрес</label>
                    <input type="text" placeholder="e-mail" id="clientEmail"/>
                </div>

                <div class="button buy-form-send">Заказать</div>
            </div>
        </div>
    </div>
</div>